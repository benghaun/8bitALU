module multiplier (
    input alufn[6], //6-bit alufn signal ALUFN[5:0]
    input a[8],     //8-bit input A  
    input b[8],     //8-bit input B  
    output out[8]   //8-bit output out
) {
  
  
  always {
    if (alufn == 6b000010){        //Perform multiplication based on this control signal
      out = $signed(a)*$signed(b);
    }
    else{
      out = 8x{0};
    }
}
}



